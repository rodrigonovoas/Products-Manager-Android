<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.rodrigonovoa.myproductsmanager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ProductsManagerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyProductsManager"
        android:requestLegacyExternalStorage="true">
        <activity android:name=".ui.backup.BackUpActivity"></activity>
        <activity android:name=".ui.operations.AddModifyOperation" />
        <activity android:name=".ui.operations.OperationActivity" />
        <activity android:name=".ui.operations.OperationListActivity" />
        <activity android:name=".ui.todoList.TodoListActivity" />
        <activity android:name=".ui.products.ProductActivity" />
        <activity android:name=".ui.contacts.ContactActivity" />
        <activity android:name=".ui.products.AddModifyProduct" />
        <activity android:name=".ui.products.ProductListActivity" />
        <activity android:name=".ui.contacts.ContactListActivity" />
        <activity android:name=".ui.contacts.AddModifyContact" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>